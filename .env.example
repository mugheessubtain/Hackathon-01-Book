# === Database Configuration ===
# Neon Serverless Postgres
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require
DATABASE_POOL_MIN_SIZE=1
DATABASE_POOL_MAX_SIZE=10

# === Vector Database ===
# Qdrant Cloud
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=textbook_chunks

# === AI Services ===
# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_CHAT_MODEL=gemini-2.5-flash

# === API Configuration ===
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.github.io

# === Authentication ===
# Better-Auth
AUTH_SECRET=generate-a-secure-random-string-here-min-32-chars
AUTH_TRUST_HOST=true

# === Application Settings ===
# Environment: development, staging, production
ENVIRONMENT=development
LOG_LEVEL=INFO

# === Frontend (Docusaurus) ===
SITE_URL=https://yourusername.github.io
BASE_URL=/your-repo-name/
ORGANIZATION_NAME=yourusername
PROJECT_NAME=your-repo-name

# === GitHub Pages Deployment ===
GIT_USER=yourusername
DEPLOYMENT_BRANCH=gh-pages

# === Optional: Local Development ===
# Use local PostgreSQL instead of Neon
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/physical_ai_db

# Use local Qdrant instead of cloud
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=  # Leave empty for local
